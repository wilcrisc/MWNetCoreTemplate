                <a asp-page="./Tutor" class="btn btn-primary">Register as Tutor</a>
            </div>
        </div>
    </div> 
    <div class="col-12">
        <div class="card border-primary w-100" style="width: 18rem;">
            @*<img class="card-img-top" src="~/img/student.jpg" alt="Card image cap">*@
            <div class="card-body">
                <h4 class="card-title">User</h4>
                <p class="card-text">Register as a user to gain access to the App Features. </p>
                <a asp-page="./NewUser" class="btn btn-primary">Register as User</a>
            </div>
        </div>
    </div>
</div>
