@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="col-xxl-12">
    <div class="row flex-lg-row-reverse align-items-center g-5">
        <div class="col-10 col-lg-6 d-none d-lg-block">
            <img src="https://technext.github.io/landie/v1.0.0/assets/img/illustrations/1.png" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
        </div>
        <div class="col-lg-6 pt-sm-5">
            <h1 class="display-5 fw-bold lh-1 mb-3">Mindweb eSolutions - .NET Core Template</h1>
