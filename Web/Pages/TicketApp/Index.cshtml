@page
@model Web.Pages.TicketApp.IndexModel
@{
}

<a id="reload" class="btn btn-success">
    <i class="fas fa-refresh"></i> Refresh Tickets
</a>
<div id="viewTicket">
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            $('#viewTicket').load('?handler=ViewTicketPartial');
        });
        $(function () {
            $('#reload').on('click', function () {
                $('#viewTicket').load('?handler=ViewTicketPartial');
            });
        });
    </script>
}